        <li class="nav-item mr-5">
          <%= link_to "管理ページ", rails_admin_path, class: "nav-link"%>
        </li>
        <li class="nav-item mr-5">
          <%= link_to "集計ページ", admins_aggregate_path, class: "nav-link" %>
        </li>
      <% end %>
      <!-- 一般ユーザー -->
      <% if user_signed_in? %>
      <li class="nav-item mr-5">
        <%= link_to mypage_users_path, class: "nav-link" do %>マイページ<i class="fa-solid fa-user"></i><% end %>
      </li>
